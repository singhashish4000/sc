<div class="container">
  <div class="col-md-10">
      <p id="notice"><%= notice %></p>

      <h1>Listing Centers</h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>No of volenters</th>
            <th>Country</th>
            <th>State</th>
            <th>District</th>
            <th>Sub district</th>
            <th>Town village</th>
            <th colspan="3" style="text-align:center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @centers.each do |center| %>
            <%
            country_name = Country.find(center.country_id)
            @center_country = country_name.name
      
            state_name = State.find(center.state_id)
            @center_state = state_name.name
      
            district_name = District.find(center.district_id)
            @center_district = district_name.name
      
            sub_district_name = SubDistrict.find(center.sub_district_id)
            @center_sub_district = sub_district_name.name
      
            city_name = TownVillage.find(center.town_village_id)
            @center_city = city_name.name
            %> 
            <tr>
              <td><%= center.name %></td>
              <td><%= center.address %></td>
              <td><%= center.no_of_volenters %></td>
              <td><%= @center_country %></td>
              <td><%= @center_state %></td>
              <td><%= @center_district %></td>
              <td><%= @center_sub_district %></td>
              <td><%= @center_city %></td>
              <td><%= link_to 'Show', center %></td>
              <td><%= link_to 'Edit', edit_center_path(center) %></td>
              <td><%= link_to 'Destroy', center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Center', new_center_path %>
  </div>
</div>      
